<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- å®šä¹‰æ—¥å¿—æ–‡ä»¶çš„å­˜å‚¨åœ°å€ -->
    <property name="LOG_HOME" value="logs" />
    
    <!-- æŽ§åˆ¶å°è¾“å‡º -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-},%X{spanId:-}] %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- æ–‡ä»¶è¾“å‡º -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/affine-backend.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/affine-backend.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-},%X{spanId:-}] %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- è°ƒè¯•æ—¥å¿—å•ç‹¬è¾“å‡ºæ–‡ä»¶ -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/affine-debug.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/affine-debug.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- SQLæ—¥å¿—å•ç‹¬è¾“å‡ºæ–‡ä»¶ -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/affine-sql.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/affine-sql.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ðŸŽ¯ æ ¸å¿ƒè°ƒè¯•æœåŠ¡ - æ˜¾ç¤ºæˆ‘ä»¬çš„è¯¦ç»†è°ƒè¯•æ—¥å¿— -->
    <logger name="com.yunke.backend.service.impl.WorkspaceDocServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="DEBUG_FILE" />
    </logger>
    
    <logger name="com.yunke.backend.service.SpaceSyncGateway" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="DEBUG_FILE" />
    </logger>
    
    <logger name="com.yunke.backend.modules.document.api.WorkspaceDocController" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="DEBUG_FILE" />
    </logger>
    
    <logger name="com.yunke.backend.controller.DatabaseValidationController" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="DEBUG_FILE" />
    </logger>

    <!-- SQL å’Œæ•°æ®åº“æ—¥å¿— -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="SQL_FILE" />
    </logger>
    
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="SQL_FILE" />
    </logger>
    
    <logger name="org.springframework.jdbc.core" level="DEBUG" additivity="false">
        <appender-ref ref="SQL_FILE" />
    </logger>

    <!-- å‡å°‘å™ªéŸ³ - å…¶ä»–ç»„ä»¶ä¿æŒERRORçº§åˆ« -->
    <logger name="org.springframework.security" level="ERROR" />
    <logger name="org.springframework.web" level="ERROR" />
    <logger name="org.springframework.web.servlet" level="ERROR" />
    <logger name="org.springframework.orm.jpa" level="ERROR" />
    <logger name="org.springframework.data.redis" level="ERROR" />
    <logger name="com.yunke.backend.security.JwtAuthenticationFilter" level="ERROR" />
    <logger name="org.hibernate" level="ERROR" />
    <logger name="com.zaxxer.hikari" level="WARN" />
    <logger name="org.apache.catalina" level="WARN" />
    <logger name="org.apache.coyote" level="WARN" />
    <logger name="org.apache.tomcat" level="WARN" />

    <!-- æ ¹æ—¥å¿—çº§åˆ« -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Spring Profile é…ç½® -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="FILE" />
        </root>
    </springProfile>
</configuration>